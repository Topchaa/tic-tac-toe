            android:id="@+id/btn01"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="" />
        <Button
            android:id="@+id/btn02"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

        <Button
            android:id="@+id/btn10"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="" />
        <Button
            android:id="@+id/btn11"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="" />
        <Button
            android:id="@+id/btn12"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn20"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="" />
        <Button
            android:id="@+id/btn21"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="" />
        <Button
            android:id="@+id/btn22"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center"
    >

    <Button

android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
android:layout_marginBottom="10dp"

        />

</LinearLayout>
</FrameLayout>